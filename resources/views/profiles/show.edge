<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ user.name }}'s Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    <header>
        <h1>{{ user.name }}'s Projects</h1>
        <p>Username: {{ user.username }}</p>
    </header>

    <section>
        <h2>Showcase Projects</h2>
        <div class="projects-grid">
            @each(project in projects)
              <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title">{{ project.title }} <b> {{ project.visibility }} </b></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary">{{ project.type }}</h6>
                  <p class="card-text">{{ project.description }}</p>
                </div>
              </div>
            @end
        </div>
    </section>

    <footer>
        <p>&copy; 2024 Apisaga</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
